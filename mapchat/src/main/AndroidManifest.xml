<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.avoscloud.chat"
    android:versionCode="19"
    android:versionName="1.0.3">

    <uses-sdk android:minSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.BROADCAST_STICKY" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.mapchat.chat.App"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/LCIMKitTheme">
        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="7DeIlp8osC3hPkQBe6soMzZ33nfig9Ka" />

        <activity
            android:name="com.mapchat.chat.activity.EntrySplashActivity"
            android:theme="@style/LCIMActivity.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mapchat.chat.activity.MainActivity"
            android:launchMode="singleTask"
            android:theme="@style/LCIMActivity.NoActionBar">
            <intent-filter>
                <action android:name="com.avos.leanchart.MAIN_ACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mapchat.chat.activity.ChatRoomActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="cn.leanclud.imkit.conversation_item_click_action" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.mapchat.chat.activity.LoginActivity" />
        <activity android:name="com.mapchat.chat.activity.WebSiteActivity" />
        <activity
            android:name="com.mapchat.chat.activity.SendMsgWeb"
            android:theme="@style/LCIMActivity.NoActionBar" />
        <activity android:name="com.mapchat.chat.activity.RegisterActivity" />
        <activity android:name="com.mapchat.chat.activity.EnjoyActivity"/>
        <activity android:name="com.mapchat.chat.activity.UpdateContentActivity" />
        <activity android:name="com.mapchat.chat.friends.ContactNewFriendActivity" />
        <activity android:name="com.mapchat.chat.friends.ContactAddFriendActivity" />
        <activity android:name="com.mapchat.chat.friends.ContactPersonInfoActivity" />
        <activity android:name="com.mapchat.chat.activity.ProfileNotifySettingActivity" />
        <activity
            android:name="com.mapchat.chat.activity.ConversationGroupListActivity"
            android:label="@string/conversation_group" />
        <activity android:name="com.mapchat.chat.activity.ConversationDetailActivity" />
        <activity
            android:name="com.mapchat.chat.activity.ConversationAddMembersActivity"
            android:label="@string/conversation_inviteMembers" />

        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote" />
        <service android:name="com.avos.avoscloud.PushService" />

        <receiver android:name="com.mapchat.chat.service.LeanchatReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.USER_PRESENT" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="com.avoscloud.chat.INVITATION_ACTION" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.avos.avoscloud.AVBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.mapchat.chat.service.NotificationBroadcastReceiver">
            <intent-filter>
                <action android:name="com.avoscloud.chat.intent.client_notification" />
            </intent-filter>
        </receiver>
    </application>

</manifest>